{
    "manifest_version" : 2,

    "name" : "Taobao Data Viewer",
    "version" : "0.2",
    "description" : "Taobao Data Viewer",

    "content_scripts" : [{
            "matches" : ["http://www.taobao.com/"],
            "js" : ["index.js", "lib/jquery-1.8.2.js", "lib/highcharts.js"],
            "css" : ["style.css"],
            "run_at": "document_end"
        }],

    "browser_action": {
        "default_icon": "img/128.png",
        "default_title": "淘宝数据查阅助手",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "permissions" : [
        "http://www.taobao.com/",
        "tabs"
    ],

    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "128": "img/128.png"
    }
}